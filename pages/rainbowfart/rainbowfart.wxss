/* pages/rainbowfart/rainbowfart.wxss */
page{
  background-color:whitesmoke ;
}
#rainbowSentence{
  display: flex;
  justify-content: center;
  margin-top: 20%;
  
}
#rainbow{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  margin-top: -120rpx;
  
}
#textBg{
  position: relative;
  background-color: white;
  box-shadow: 0px 0px 5px 5px beige;
  width: 600rpx;
  height: 460rpx;
  border-radius: 30px;
}
#text{
  text-align: center;
  position: absolute;
  font-size: medium;
  margin-top: -400rpx;
  margin-left: 120rpx;
  margin-right: 120rpx;


}
button{
  position: relative;
  margin-top: 10%;
  display: inline;
  
  width: 200rpx;
  font-size: medium;
  
}
#change{
  float: right;
  background-color:tomato ;
  margin-right: 10%;
}
#copy{
  float: left;
  background-color:skyblue ;
  margin-left: 10%;
}
#add{
  position: relative;
  display: flex;
  justify-content: center;
  background-color: thistle;
  font-size: medium;
  margin-top: 25%;
}
.modal-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.modal-container {
  position: absolute;
  left: 50%;
  top: 50%;
 
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.modal-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 40rpx; 
}
.hr{
  width: 100%;
  height: 2px;
  background-color: rgb(252, 226, 250);
}
.modal-content {
  margin: 60rpx 10rpx;
  text-align: center;
}
.modal-btn {
  display: flex;
  justify-content: space-around;
  
}
.modal-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 88rpx;
  border: 2rpx solid rgb(206, 218, 248);
  
}